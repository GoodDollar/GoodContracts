{
  "name": "@gooddollar/goodcontracts",
  "version": "1.0.0-beta.0",
  "description": "GoodDollar Contracts",
  "scripts": {
    "build": "scripts/build.sh deploy",
    "start": "run-p ganache deploy",
    "coverage": "export COVERALLS_REPO_TOKEN='qiXNelh1HXMAsoPah9yRD2yG2WlqrDfLh' && run-s test:generate-typings && run-s test:tsc && scripts/coverage.sh",
    "testscript": "scripts/test.sh",
    "ganache": "ganache-cli -m \"$MNEMONIC\" -g 1000000 -l 8000000 --port 8545 --networkId 4447 -q",
    "wait": "wait-on tcp:9545",
    "deploy": "run-s migrate_reset:lite",
    "deploy:full": "run-s migrate_reset:ganache",
    "deploy:otp": "run-s migrate_reset:otp",
    "deploy:ubi": "run-s migrate_reset:ubi",
    "deploy:signup": "run-s migrate_reset:signup",
    "test": "export MNEMONIC='glad notable bullet donkey fall dolphin simple size stone evil slogan dinner' && run-s test:generate-typings && run-s test:tsc && run-s testscript",
    "test:wait": "run-s deploy test:ganache",
    "test:generate-typings": "truffle compile && typechain --target truffle './build/**/*.json'",
    "test:tsc": "tsc --noEmit",
    "lint": "solhint --formatter codeframe develop/**/*.sol",
    "test:ganache": "wait-on tcp:8545 && truffle test --network ganache && kill -9 $(lsof -t -i:8545)",
    "migrate:ganache": "truffle migrate --to 2 --network ${NETWORK-develop}",
    "migrate_reset:ganache": "truffle migrate --network ${NETWORK-develop} --reset",
    "migrate_reset:ubi": "truffle migrate -f 3 --to 3 --network ${NETWORK-develop} --reset",
    "migrate_reset:signup": "truffle migrate -f 4 --to 4 --network ${NETWORK-develop} --reset",
    "migrate_reset:otp": "truffle migrate -f 5 --to 5 --network ${NETWORK-develop} --reset",
    "migrate_reset:lite": "truffle migrate -f 1 --to 2 --network ${NETWORK-develop} --reset"
  },
  "files": [
    "build",
    "contracts",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GoodDollar/GoodContracts.git"
  },
  "keywords": [
    "UBI",
    "basic",
    "income",
    "gooddollar",
    "ethereum",
    "smart",
    "contracts"
  ],
  "author": "GoodDollar Community <builders@gooddollar.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GoodDollar/GoodContracts/issues"
  },
  "homepage": "https://gooddollar.org",
  "dependencies": {
    "@daostack/arc": "0.0.1-rc.18",
    "dotenv": "^6.2.0",
    "solhint": "^2.0.0",
    "update": "^0.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.15",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.2",
    "bignumber.js": "^8.1.1",
    "bindings": "^1.4.0",
    "coveralls": "^3.0.5",
    "eth-gas-reporter": "^0.2.4",
    "fkill-cli": "^5.2.0",
    "fs-extra": "^7.0.1",
    "ganache-cli": "^6.4.3",
    "ganache-cli-coverage": "https://github.com/frangio/ganache-cli/releases/download/v6.4.1-coverage/ganache-cli-coverage-6.4.1.tgz",
    "jest": "^24.8.0",
    "mocha-lcov-reporter": "^1.3.0",
    "node-jq": "1.6.0",
    "npm-run-all": "^4.1.5",
    "openzeppelin-solidity": "^2.1.2",
    "solidity-coverage": "github:rotcivegaf/solidity-coverage#5875f5b7bc74d447f3312c9c0e9fc7814b482477",
    "truffle": "^5.0.17",
    "truffle-hdwallet-provider": "latest",
    "truffle-hdwallet-provider-privkey": "latest",
    "truffle-typings": "^1.0.6",
    "ts-generator": "0.0.8",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typechain": "^0.3.14",
    "typescript": "^3.4.5",
    "wait-on": "^3.2.0"
  }
}

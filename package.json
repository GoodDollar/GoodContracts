{
  "name": "@gooddollar/goodcontracts",
  "version": "0.0.6",
  "description": "GoodDollar Contracts",
  "scripts": {
    "start": "(ganache-cli --deterministic --port 8545 --networkId 6000 &) && wait-on tcp:8545",
    "deploy": "wait-on tcp:8545 --delay 5000 && truffle migrate --network ganache --reset",
    "stop": "fkill :8545 || true",
    "pretest": "npm run start",
    "test": "wait-on tcp:8545 && truffle test --network ganache",
    "posttest": "npm run stop",
    "migrate:ganache": "truffle migrate --network ganache",
    "migrate_reset:ganache": "truffle migrate --network ganache --reset"
  },
  "files": [
    "build",
    "contracts",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GoodDollar/GoodContracts.git"
  },
  "keywords": [
    "UBI",
    "basic",
    "income",
    "gooddollar",
    "ethereum",
    "smart",
    "contracts"
  ],
  "author": "GoodDollar Community <builders@gooddollar.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GoodDollar/GoodContracts/issues"
  },
  "homepage": "https://gooddollar.org",
  "dependencies": {
    "dotenv": "^6.2.0",
    "update": "^0.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "bindings": "^1.4.0",
    "fkill-cli": "^5.2.0",
    "fs-extra": "^7.0.1",
    "ganache-cli": "^6.3.0",
    "openzeppelin-solidity": "^2.1.2",
    "truffle": "^5.0.5",
    "truffle-hdwallet-provider": "^1.0.3",
    "wait-on": "^3.2.0",
    "web3": "^1.0.0-beta.41",
    "websocket": "^1.0.28"
  }
}

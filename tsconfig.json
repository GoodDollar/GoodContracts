{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": false,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "mocha", "truffle-contracts"],
    "allowJs": true
  },
  "include": ["types/**/*.ts", "test/**/*.ts"]
  // "exclude": ["stakingModel", "node_modules", "example", "build", "devBlockchain"]
}
